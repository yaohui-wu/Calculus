\usepackage[letterpaper, margin=1in]{geometry}
\usepackage{mlmodern}
\usepackage{amsmath}
\usepackage{amssymb}
\usepackage{amsthm}

\renewcommand*{\qedsymbol}{\(\blacksquare\)}
\renewcommand*{\epsilon}{\varepsilon}

\newtheoremstyle{theorem}% Name.
    {}{}% Space above and below.
    {}{}% Body font and indentation amount.
    {\bfseries}{.}% Theorem head font and punctuation after theorem head.
    { }% Space after theorem head (normal).
    {\thmname{#1}\thmnumber{ #2}\thmnote{ #3}}% Specify theorem head.

\theoremstyle{theorem}
\newtheorem{thm}{Theorem}[section]
\newenvironment*{theorem}
    {\renewcommand*{\qedsymbol}{\(\square\)}\pushQED{\qed}\begin{thm}}
    {\popQED\end{thm}}

\theoremstyle{theorem}
\newtheorem{defn}{Definition}[section]
\newenvironment*{definition}
    {\renewcommand*{\qedsymbol}{\(\square\)}\pushQED{\qed}\begin{defn}}
    {\popQED\end{defn}}

\theoremstyle{theorem}
\newtheorem{problem}{Problem}[section]

\newenvironment*{solution}{\begin{proof}[Solution]}{\end{proof}}

